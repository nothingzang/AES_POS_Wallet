<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:focusable="false"
    android:clickable="false"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <TextView
        android:focusable="false"
        android:clickable="false"
        android:id="@+id/time_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="2019年5月12日"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:visibility="visible" />

    <RelativeLayout
        android:focusable="false"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_day"
        android:padding="10dp">

        <!--<com.facebook.drawee.view.SimpleDraweeView-->
        <!--android:id="@+id/icon"-->
        <!--android:layout_width="30dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginRight="20dp"-->
        <!--fresco:placeholderImage="@mipmap/heard_icon_boy"-->
        <!--fresco:roundAsCircle="true" />-->

        <LinearLayout
            android:focusable="false"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:focusable="false"
                android:clickable="false"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon"
                android:text="北京便利蜂连锁商业超市"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:focusable="false"
                android:clickable="false"
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="17:50:20"
                android:textColor="#ffffff"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:focusable="false"
            android:clickable="false"
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text=" --"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:focusable="false"
            android:clickable="false"
            android:id="@+id/number_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/number"
            android:text="¥"
            android:textColor="#ffffff"
            android:textSize="10sp" />

        <TextView
            android:focusable="false"
            android:clickable="false"
            android:id="@+id/change_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="1dp"
            android:layout_toLeftOf="@+id/number_icon"
            android:text="-"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_below="@id/icon"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:background="@drawable/shape_undline" />-->
    </RelativeLayout>
</RelativeLayout>