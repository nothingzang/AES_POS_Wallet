<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A9EFA"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/center_liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账&#12288;号"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/phone_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@color/light_white"
                android:hint="请输入账号"
                android:inputType="text"
                android:maxLength="11"
                android:maxLines="1"
                android:padding="10dp"
                android:textColorHint="#553F51B5"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/password_liner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密&#12288;码"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@color/light_white"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="10dp"
                android:textColorHint="#553F51B5"
                android:textSize="16sp" />
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:src="@mipmap/logo" />


    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/center_liner"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/commom_button_white"
        android:button="@null"
        android:text="登录"
        android:textColor="#2A9EFA"
        android:textSize="18sp" />
</RelativeLayout>